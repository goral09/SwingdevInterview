package com.swingdev.soldiers

case class Position(x: Int, y: Int)
object Position {
	def apply(): Position = Position(0,0)
}

object SoldierTypeAliases {
	type Life 	= Int
	type Range	= Int
	type Damage	= Int
	type MovePoints = Int
	type Armor = Int
	type Enemy = Soldier
}

trait Soldier {
	import SoldierTypeAliases._

	val pos: Position
	val armNo: Int

	// Some features of soldier
	def life: Life
	def range: Range
	def damage: Damage
	def armor: Armor
	def movePoints: MovePoints

}